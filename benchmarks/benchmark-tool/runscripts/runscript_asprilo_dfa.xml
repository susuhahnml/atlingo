<runscript output="asprilo_DFA_benchmark">

	<machine name="komputer" cpu="24x8xE5520@2.27GHz" memory="24GB"/>
	
  	<config name="seq-asprilo-dfa" template="templates/seq-asprilo-dfa.sh"/>
  
	<system name="compute_dfa_and_models" version="1" measures="clasp" config="seq-asprilo-dfa">


		<!-- WITHOUT CONSTRAINTS, HENCE WITHOUT MODE -->

    		<setting name="without-constraint_h_15-alternating" cmdline="15" tag="basic" />
    		<setting name="without-constraint_h_25-alternating" cmdline="25" tag="basic" />

			<!-- HORIZON 15 -->
			<setting name="constraint_follow_unitl_0_0_h_15-alternating" cmdline="15 follow_unitl_0_0" tag="basic" />
    		<setting name="constraint_h-b-v_h_15-alternating" cmdline="15 horizontally_before_vertically" tag="basic" />
    		<setting name="constraint_v-b-h_h_15-alternating" cmdline="15 vertically_before_horizontally" tag="basic" />
    		<setting name="constraint_never-both-direction_h_15-alternating" cmdline="15 never_both_direction" tag="basic" />
    		<setting name="constraint_eventually-follows_h_15-alternating" cmdline="15 eventually_follows" tag="basic" />

			<!-- HORIZON 25 -->
    		<setting name="constraint_follow_unitl_0_0_h_15-alternating" cmdline="25 follow_unitl_0_0" tag="basic" />
    		<setting name="constraint_h-b-v_h_15-alternating" cmdline="25 horizontally_before_vertically" tag="basic" />
    		<setting name="constraint_v-b-h_h_15-alternating" cmdline="25 vertically_before_horizontally" tag="basic" />
    		<setting name="constraint_never-both-direction_h_15-alternating" cmdline="25 never_both_direction" tag="basic" />
    		<setting name="constraint_eventually-follows_h_15-alternating" cmdline="25 eventually_follows" tag="basic" />


    </system>

	<seqjob name="seq-gen" timeout="900" runs="2" script_mode="timeout" walltime="50:00:00" parallel="1"/>

	<benchmark name="asprilo-benchmarkk">
		<folder path="../../env/asprilo/asprilo-abstraction-encodings/instances/md/structured/"> </folder> 
	</benchmark>
	
	<project name="clingo-seq-job" job="seq-gen">
		<runtag machine="komputer" benchmark="asprilo-benchmarkk" tag="basic"/>
	</project>

</runscript>

