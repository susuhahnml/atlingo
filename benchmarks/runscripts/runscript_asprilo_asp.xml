<runscript output="output/asp__h-{H}__n-{N}">

	<machine name="komputer" cpu="24x8xE5520@2.27GHz" memory="24GB"/>
	
	<config name="seq-asprilo" template="../programs/seq-asprilo.sh"/>
  
	<system name="compute_dfa" version="1" measures="clingo" config="seq-asprilo">

		<setting name="horizontal_before_vertical" cmdline="{H} {N} 7 constraints/constraints/horizontally_before_vertically.lp constraints/predicates_needed/move_h_v.lp {CLINGO_ARGS}" tag="basic" />
		<setting name="vertical_before_horizontal" cmdline="{H} {N} 7 constraints/constraints/vertically_before_horizontally.lp constraints/predicates_needed/move_h_v.lp {CLINGO_ARGS}" tag="basic" />
		<setting name="never_both_direction" cmdline="{H} {N} 7 constraints/constraints/never_both_direction.lp constraints/predicates_needed/empty.lp {CLINGO_ARGS}" tag="basic" />
		<!--
		<setting name="eventually_5xright" cmdline="{H} {N} 7 constraints/constraints/eventually_r_r_r_r_r.lp constraints/predicates_needed/move_r.lp" tag="basic" />
		<setting name="square_release" cmdline="{H} {N} 7 constraints/constraints/square_release.lp constraints/predicates_needed/looping_starts.lp" tag="basic" />
-->
    </system>

	<pbsjob name="pbs-gen" partition="short" timeout="1200" runs="1" script_mode="timeout" walltime="00:50:00" cpt="4"/>

	<benchmark name="asprilo-benchmark">
		<folder path="/home/hahnmartinlu/temporal-automata/atlingo/benchmarks/asprilo_instances/"> </folder> 
	</benchmark>
	
	<project name="temporal-automata" job="pbs-gen">
		<runtag machine="komputer" benchmark="asprilo-benchmark" tag="basic"/>
	</project>

</runscript>

